<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_purple_nebula_small"
    tools:context="com.josfeenstra.spacelooter.Game">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <GridView
                android:id="@+id/boardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center">

            </GridView>

        </FrameLayout>

        <TextView
            android:id="@+id/boardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/entsans"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/background_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/buttonUp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_toEndOf="@+id/buttonLeft"
                android:layout_toRightOf="@+id/buttonLeft"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/buttonDown"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                app:srcCompat="@android:drawable/arrow_down_float"
                tools:layout_editor_absoluteX="172dp"
                tools:layout_editor_absoluteY="474dp" />

            <ImageButton
                android:id="@+id/buttonLeft"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/buttonDown"
                android:layout_toStartOf="@+id/buttonDown"
                app:srcCompat="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/buttonRight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/buttonLeft"
                android:layout_toEndOf="@+id/buttonUp"
                android:layout_toRightOf="@+id/buttonUp"
                app:srcCompat="@android:drawable/ic_media_next" />

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/buttonReset"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/buttonBack"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_manage" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
